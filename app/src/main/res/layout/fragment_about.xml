<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_small">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/section_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginRight="@dimen/spacing_small"/>

            <TextView
                android:id="@+id/section_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:layout_marginRight="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:layout_marginStart="@dimen/spacing_normal"
                style="@style/Theme.Esnmobilit.CardViewTitle"/>

            <TextView
                style="@style/Theme.Esnmobilit.CardViewSubtitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_fragment_about"/>
            </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_small">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/phone_relative"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/cardView_imageViewAbout_width"
                    android:layout_height="@dimen/cardView_imageViewAbout_height"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_local_phone_black_24dp"
                    style="@style/Theme.Esnmobilit.CardViewImageViewAbout"/>

                <TextView
                    android:id="@+id/section_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    style="@style/Theme.Esnmobilit.CardViewTextViewAbout"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/mail_relative"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_normal">

                <ImageView
                    android:layout_width="@dimen/cardView_imageViewAbout_width"
                    android:layout_height="@dimen/cardView_imageViewAbout_height"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_email_black_24dp"
                    style="@style/Theme.Esnmobilit.CardViewImageViewAbout"/>

                <TextView
                    android:id="@+id/section_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    style="@style/Theme.Esnmobilit.CardViewTextViewAbout"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view3"
        android:layout_margin="@dimen/spacing_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/website_relative"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/cardView_imageViewAbout_width"
                    android:layout_height="@dimen/cardView_imageViewAbout_height"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_public_black_24dp"
                    style="@style/Theme.Esnmobilit.CardViewImageViewAbout"/>

                <TextView
                    android:id="@+id/section_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    style="@style/Theme.Esnmobilit.CardViewTextViewAbout"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/address_relative"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/cardView_imageViewAbout_width"
                    android:layout_height="@dimen/cardView_imageViewAbout_height"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_directions_black_24dp"
                    style="@style/Theme.Esnmobilit.CardViewImageViewAbout"/>

                <TextView
                    android:id="@+id/section_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    style="@style/Theme.Esnmobilit.CardViewTextViewAbout"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>